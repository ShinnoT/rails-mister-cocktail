<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2><%= @cocktail.name %></h2>
<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<p>recipe:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.description %></p>
      <p><%= link_to "delete dose", dose_path(dose), method: :delete, data: {confirm: "are you sure?"} %></p>
    </li>
  <% end %>
</ul>

<p>ingredients:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %></li>
  <% end %>
</ul>

<p><%= link_to "go back to all the cocktails", cocktails_path %></p>
<p><%= link_to "create a new dose", new_cocktail_dose_path(@cocktail) %></p>
