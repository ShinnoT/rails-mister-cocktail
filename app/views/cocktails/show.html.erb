<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2><%= @cocktail.name %></h2>

<p>recipe:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
  <% end %>
</ul>

<p>ingredients:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %></li>
  <% end %>
</ul>

<%= link_to "go back to all the cocktails", cocktails_path %>
